{
  "manifest_version": 2,
  "name": "Now",
  "short_name": "Now",
  "version": "1.0",

  "description": "A new-tab page override complete with productivity tools",

  "author": "Kerry Powell (kerrywpowell@gmail.com)",
  "chrome_url_overrides": {
      "newtab": "index.html"
  },
  "display": "fullscreen",
  "homepage_url": "http://www.kerrywpowell.com",
  "minimum_chrome_version": "48.0.2564.116",
  "offline_enabled": false,
  "optional_permissions": ["tabs"],
  "permissions": ["tabs","geolocation", "history"],
  "theme_color": "#317EFB",
  "background_color": "#317EFB",
  "icons": [
    {
      "src": "/icons/logos/192.svg",
      "sizes": "192x192",
      "type": "image/svg"
    },
    {
      "src": "/icons/logos/256.svg",
      "sizes": "256x256",
      "type": "image/svg"
    },
    {
      "src": "/icons/logos/384.svg",
      "sizes": "384x384",
      "type": "image/svg"
    },
    {
      "src": "/icons/logos/512.svg",
      "sizes": "512x512",
      "type": "image/svg"
    }
  ]
}
